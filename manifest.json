{
     "name": "Bilier",
     "version": "1.0",
     "description": "bilibili自助抽奖，辣条自助,bilibili看直播助手",
     "manifest_version": 2,
     "icons": {
          "16": "./imgs/bilib16.png",
          "32": "./imgs/bilib32.png",
          "48": "./imgs/bilib48.png",
          "128": "./imgs/bilib128.png"
     },
     "permissions": [
          "http://*/*",
          "https://*/*",
          "activeTab",
          "tabs",
          "storage",
          "contextMenus",
          "webNavigation",
          "declarativeContent"
     ],
     "page_action": {
          "default_icon": {
               "16": "./imgs/bilib16.png",
               "32": "./imgs/bilib32.png",
               "48": "./imgs/bilib48.png",
               "128": "./imgs/bilib128.png"
          },
          "default_popup": "./html/popup.html",
          "default_title": "bilier"
     },
     "background": {
          "scripts": ["./js/background.js","./js/menus.js"],
          "persistent": true 
     }
}